<%- include("partials/header"); -%> 

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-control" type="text" name="postTitle" id="post-title" placeholder="What's on your mind?" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="post-content">Post</label>
        <textarea class="form-control" name="postContent" id="post-content" rows="5" placeholder="Tell us your story ..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%> 